<UserControl x:Class="LibraryManager.Client.View.BooksViews.AddBookDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:LibraryManager.Client.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="#272537"
                CornerRadius="10"
                Height="250"
                Width="250">
            <StackPanel>
                <TextBlock Text="New Book"
                           Foreground="White"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           Margin="0, 4, 0, 10"/>

                <TextBox Tag="Name"
                         Style="{StaticResource ResourceKey=TextBoxTheme}"
                         Margin="5"
                         Text="{Binding BookName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <controls:AutoCompleteTextBox ItemsSource="{Binding AuthorsNames}"
                                              SearchText="{Binding SearchAuthorText, Mode=TwoWay}" 
                                              Placeholder="Author"
                                              Margin="5"/>

                <TextBox Tag="Year"
                         Style="{StaticResource ResourceKey=TextBoxTheme}"
                         Margin="5"
                         Text="{Binding BookYear, UpdateSourceTrigger=PropertyChanged}"
                         InputScope="Number"
                         PreviewTextInput="NumericTextBox_PreviewTextInput"/>


                <Button Style="{StaticResource CommonButtonTheme}"
                        Content="Add"
                        FontSize="16"
                        Margin="4"
                        Command="{Binding AddBookCommand}"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
